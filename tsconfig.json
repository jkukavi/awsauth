{
  "compilerOptions": {
    "lib": ["dom", "es2018"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "target": "es2018",
    "outDir": "lib",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types/"
    ],
  },
  "exclude": ["node_modules"]
}
